<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">
        <img alt="Password Management" src="...">
      </a>
      {{#link-to 'index'}}
        <button type="button" class="btn btn-default navbar-btn" aria-label="Home">
          <span class="glyphicon glyphicon-home" aria-hidden="true"></span>
        </button>
      {{/link-to}}
      {{#link-to 'new-password'}}
        <button type="button" class="btn btn-default navbar-btn" aria-label="Add Password">
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        </button>
      {{/link-to}}
    </div>
  </div>
</nav>



<div class="container-fluid">
  <div class="row content">
    <div class="col-sm-1 sidenav">
    </div>
    <div class="col-sm-10 text-left">
      <table id="passwordListTable" class="table table-striped dt-responsive nowrap" width="100%" cellspacing="0">
        <thead>
        <tr>
          <th>User ID</th>
          <th>Password</th>
          <th>Application Name</th>
          <th>Application URL</th>
          <th>Delete</th>
        </tr>
        </thead>

        <tfoot>
        <tr>
          <th>User ID</th>
          <th>Password</th>
          <th>Application Name</th>
          <th>Application URL</th>
          <th>Delete</th>
        </tr>
        </tfoot>

        <tbody>
        {{#each model as |passwords|}}
          <tr>
            <td>{{passwords.userId}}</td>
            <td>{{passwords.password}}</td>
            <td>{{passwords.applicationName}}</td>
            <td>{{passwords.applicationURL}}</td>
            <td>
              {{#link-to 'index'}}
                <button type="button" class="btn btn-default navbar-btn" aria-label="Delete">
                  <span class="glyphicon glyphicon-minus" aria-hidden="false"></span>
                </button>
              {{/link-to}}
            </td>
          </tr>
        {{/each}}
        </tbody>
      </table>

    </div>
    <div class="col-sm-1 sidenav">
    </div>
  </div>
</div>


<script>
  $(document).ready(function() {
    $('#passwordListTable').DataTable();
  });
</script>