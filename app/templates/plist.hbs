<script>
  $(document).ready(function() {
    $('#passwordListTable').DataTable();
  });

</script>
<H1>Password List Page</H1>

<table id="passwordListTable" class="table table-striped table-bordered" width="100%" cellspacing="0">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Password</th>
      <th>Application Name</th>
      <th>Application URL</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tfoot>
    <tr>
      <th>User ID</th>
      <th>Password</th>
      <th>Application Name</th>
      <th>Application URL</th>
      <th>Delete</th>
    </tr>
  </tfoot>

  <tbody>
    <tr>
      <td>{{passwords.userId}}</td>
      <td>{{passwords.password}}</td>
      <td>{{passwords.applicationName}}</td>
      <td>{{passwords.applicationURL}}</td>
      <td>
        {{#link-to 'delete-password'}}
          <button type="button" class="btn btn-default navbar-btn" aria-label="Delete">
            <span class="glyphicon glyphicon-delete" aria-hidden="true"></span>
          </button>
        {{/link-to}}
      </td>
    </tr>
  </tbody>
</table>
