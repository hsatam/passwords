<H1>Password List Page</H1>

<table id="passwordListTable" class="table table-striped table-bordered" width="90%" cellspacing="0">
  <thead>
    <tr>
      <th>User ID</th>
      <th>Password</th>
      <th>Application Name</th>
      <th>Application URL</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tfoot>
    <tr>
      <th>User ID</th>
      <th>Password</th>
      <th>Application Name</th>
      <th>Application URL</th>
      <th>Delete</th>
    </tr>
  </tfoot>

  <tbody>
    {{#each pwd in model}}
      <tr>
        <td>{{pwd.userId}}</td>
        <td>{{pwd.password}}</td>
        <td>{{pwd.applicationName}}</td>
        <td>{{pwd.applicationURL}}</td>
        <td>
          {{#link-to 'index'}}
            <button type="button" class="btn btn-default navbar-btn" aria-label="Delete">
              <span class="glyphicon glyphicon-minus" aria-hidden="true"></span>
            </button>
          {{/link-to}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>


<script>
  $(document).ready(function() {
    $('#passwordListTable').DataTable();
  });
</script>